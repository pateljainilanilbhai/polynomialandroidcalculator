<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jainil.myapplication.help"
    tools:showIn="@layout/activity_help"
    android:background="@drawable/chapter05">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

    <TextView
        android:text="App accepts two polynomials."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/holo_red_light"
        android:textIsSelectable="false"
        android:visibility="visible"
        android:backgroundTint="@android:color/holo_blue_light"
        android:background="@android:color/holo_blue_bright" />

    <TextView
        android:text="=>just write coefficients of standard polynomial format with spacing between them"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:id="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/holo_red_light"
        android:backgroundTint="@android:color/holo_blue_light"
        android:background="@android:color/holo_blue_bright"/>

    <TextView
        android:text="for example:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:id="@+id/textView17"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:text="for example:"
        android:textColor="@android:color/holo_red_light"
        android:backgroundTint="@android:color/holo_blue_light"
        android:background="@android:color/holo_blue_bright"/>

    <TextView
        android:text="5x^2+3x+2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:text="5x^2+3x+2"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/holo_red_light"
        android:backgroundTint="@android:color/holo_blue_light"
        android:background="@android:color/holo_blue_bright"/>

    <TextView
        android:text="just write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:text="just write"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/holo_red_light"
        android:backgroundTint="@android:color/holo_blue_light"
        android:background="@android:color/holo_blue_bright"/>

    <TextView
        android:text="5 3 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:text="5 3 2"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/holo_red_light"
        android:backgroundTint="@android:color/holo_blue_light"
        android:background="@android:color/holo_blue_bright"
        />

    <Button
        android:text="Rate Us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:id="@+id/button7"
        android:textColor="@android:color/holo_red_light"
        android:backgroundTint="@android:color/holo_blue_light"
        android:background="@android:color/holo_blue_bright"
        android:onClick="onrate" />

    <TextView
        android:text="write 0 if coefficients are absent of that degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:text="write 0 if coefficients are absent of that degree"
        android:layout_below="@+id/textView21"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_red_light"
        android:backgroundTint="@android:color/holo_blue_light"
        android:background="@android:color/holo_blue_bright" />

    <TextView
        android:text="=>writting 0 at first position is illegeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView24"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:text="=>writting 0 at first position is illegeal"
        android:textColor="@android:color/holo_red_light"
        android:backgroundTint="@android:color/holo_blue_light"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/textView23"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="=>Writting nothing in polynomial is illegal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:text="=>Writting nothing in polynomial is illegal"
        android:textColor="@android:color/holo_red_light"
        android:backgroundTint="@android:color/holo_blue_light"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/textView24"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
